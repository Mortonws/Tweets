<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginLeft="@dimen/tweets_comments_left_padding">

    <TextView
        android:id="@+id/comments_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_tweets_sender_name"
        android:textSize="@dimen/tweets_comments_sender_name_size"/>

    <TextView
        android:id="@+id/tweets_comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_2"
        android:textColor="@color/black"
        android:textSize="@dimen/tweets_comments_size"/>
</LinearLayout>